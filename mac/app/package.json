{
  "name": "stop-typing",
  "version": "2.0.0",
  "description": "Stop Typing - Speech to Text Desktop App for macOS",
  "main": "dist/main.js",
  "author": "Yash",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && bash run-electron.sh",
    "start": "bash run-electron.sh",
    "watch": "tsc --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.stoptyping.app",
    "productName": "Stop Typing",
    "copyright": "Copyright @ 2025 Yash",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!node_modules/**/test",
      "!node_modules/**/tests",
      "!node_modules/**/*.md",
      "!node_modules/**/.bin"
    ],
    "asarUnpack": [
      "node_modules/uiohook-napi/**/*",
      "node_modules/node-gyp-build/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../ffmpeg/${arch}",
        "to": "ffmpeg",
        "filter": [
          "ffmpeg"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "uiohook-napi": "^1.5.4",
    "ws": "^8.18.3"
  }
}
